@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DegitalContentManagerment.Models.Leturer>
@{
    ViewData["Title"] = "Index";
    Layout = "_layout";
}

<h1 class="mx-5 my-5">Movie Information</h1>
<a href="/Leturer/Create" class="btn btn-primary mb-3">Create New <i class="fa-solid fa-calendar-plus"></i></a>
<div class="mx-5 my-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(Model => Model.FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.LastName)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.Gender)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.Email)</th>
                @*<th scope="col">@Html.DisplayNameFor(Model => Model.FatherName)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.FatherJob)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.MotherName)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.MotherJob)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.DateofBirth)</th>*@
                <th scope="col">@Html.DisplayNameFor(Model => Model.Age)</th>
                @*<th scope="col">@Html.DisplayNameFor(Model => Model.CreatedOn)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.ModifiedOn)</th>*@
                <th scope="col">@Html.DisplayNameFor(Model => Model.ProfileImage)</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (DegitalContentManagerment.Models.Leturer leturer in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(movies => leturer.FirstName)</td>
                    <td>@Html.DisplayFor(movies => leturer.LastName)</td>
                    <td>@Html.DisplayFor(movies => leturer.Gender)</td>
                    <td>@Html.DisplayFor(movies => leturer.PhoneNumber)</td>
                    <td>@Html.DisplayFor(movies => leturer.Email)</td>
                    <td>@Html.DisplayFor(movies => leturer.Age)</td>
                    <td>@Html.DisplayFor(movies => leturer.ProfileImage)</td>
                    <td>
                        <img src="~/Profiles/@leturer.ImageFile" />
                    </td>
                    <td>
                        <a asp-route-id="@leturer.LeturerId" asp-controller="Leturer" asp-action="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-route-id="@leturer.LeturerId" asp-controller="Leturer" asp-action="Delete"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>