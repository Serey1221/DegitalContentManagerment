@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DegitalContentManagerment.Models.Student>
@{
    ViewData["Title"] = "Index";
    Layout = "_layout";
}

<h1 class="mx-5 my-5">Letusrer</h1>
<a href="/Student/Create" class="btn btn-primary mb-3">Create New <i class="fa-solid fa-calendar-plus"></i></a>
<div class="mx-5 my-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(Model => Model.FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.LastName)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.Gender)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(Model => Model.Email)</th>
                @*<th scope="col">@Html.DisplayNameFor(Model => Model.FatherName)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.FatherJob)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.MotherName)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.MotherJob)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.DateofBirth)</th>*@
                <th scope="col">@Html.DisplayNameFor(Model => Model.Age)</th>
                @*<th scope="col">@Html.DisplayNameFor(Model => Model.CreatedOn)</th>
                    <th scope="col">@Html.DisplayNameFor(Model => Model.ModifiedOn)</th>*@
                <th scope="col">@Html.DisplayNameFor(Model => Model.ProfileImage)</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            
           @foreach(DegitalContentManagerment.Models.Student student in Model)
            {
            <tr>
                <td>@Html.DisplayFor(stu => student.FirstName)</td>
                <td>@Html.DisplayFor(stu => student.LastName)</td>
                <td>@Html.DisplayFor(stu => student.Gender)</td>
                <td>@Html.DisplayFor(stu => student.PhoneNumber)</td>
                <td>@Html.DisplayFor(stu => student.Email)</td>
                <td>@Html.DisplayFor(stu => student.Age)</td>
                @*<td>@Html.DisplayFor(movies => student.ProfileImage)</td>*@
                @*<td>
            <img src="~/Profiles/@student.ImageFile" />
        </td>*@
                <td>
                    <a asp-route-id="@student.StudenId" asp-controller="Student" asp-action="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-route-id="@student.StudenId" asp-controller="Student" asp-action="Delete"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>